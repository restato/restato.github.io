---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
}

const { title, description, image, type, publishedTime, modifiedTime, author } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} type={type} publishedTime={publishedTime} modifiedTime={modifiedTime} author={author}>
  <Header />
  <main class="flex-1">
    <slot />
  </main>
  <Footer />
</BaseLayout>
