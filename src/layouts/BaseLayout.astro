---
import '../styles/global.css';

interface AlternateUrl {
  lang: string;
  url: string;
}

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  lang?: 'ko' | 'en' | 'ja';
  alternateUrls?: AlternateUrl[];
}

const {
  title,
  description = 'Claude와 함께하는 개발 일지 - Vibe Coding으로 배우고 만드는 것들',
  image = '/images/og-default.png',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = 'Restato',
  lang = 'ko',
  alternateUrls = []
} = Astro.props;

// Locale mapping
const localeMap: Record<string, string> = {
  ko: 'ko_KR',
  en: 'en_US',
  ja: 'ja_JP'
};
const ogLocale = localeMap[lang] || 'ko_KR';

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = 'Restato';
const twitterHandle = '@restato_dev';

// JSON-LD Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": siteName,
  "description": description,
  "url": Astro.site?.toString(),
  "author": {
    "@type": "Person",
    "name": author
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${Astro.site}blog?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};

const articleSchema = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": new URL(image, Astro.site).toString(),
  "url": canonicalURL.toString(),
  "datePublished": publishedTime?.toISOString(),
  "dateModified": modifiedTime?.toISOString() || publishedTime?.toISOString(),
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": siteName,
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/favicon.svg', Astro.site).toString()
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.toString()
  }
} : null;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- hreflang for multi-language -->
    {alternateUrls.length > 0 && alternateUrls.map(alt => (
      <link rel="alternate" hreflang={alt.lang} href={alt.url} />
    ))}
    {alternateUrls.length > 0 && (
      <link rel="alternate" hreflang="x-default" href={alternateUrls.find(a => a.lang === 'ko')?.url || canonicalURL.toString()} />
    )}

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={ogLocale} />
    {type === 'article' && publishedTime && (
      <meta property="article:published_time" content={publishedTime.toISOString()} />
    )}
    {type === 'article' && modifiedTime && (
      <meta property="article:modified_time" content={modifiedTime.toISOString()} />
    )}
    {type === 'article' && (
      <meta property="article:author" content={author} />
    )}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={twitterHandle} />
    <meta name="twitter:creator" content={twitterHandle} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Additional SEO -->
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google-site-verification" content="0GLTtjarMTr8NsaJaP-z0tbHPycvu_rOoQykr81BL0o" />
    <meta name="google-adsense-account" content="ca-pub-5341896100319873" />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {articleSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
    )}

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CJKYE91FQM"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CJKYE91FQM');
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link
      href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard/dist/web/static/pretendard.css"
      rel="stylesheet"
    />

    <!-- Theme Script -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>

    <!-- Language Script -->
    <script is:inline>
      (function() {
        const langMap = {
          ko: { html: 'ko', ogLocale: 'ko_KR' },
          en: { html: 'en', ogLocale: 'en_US' },
          ja: { html: 'ja', ogLocale: 'ja_JP' }
        };

        function updateHtmlLang(lang) {
          const config = langMap[lang];
          if (!config) return;

          document.documentElement.lang = config.html;

          const ogLocaleMeta = document.querySelector('meta[property="og:locale"]');
          if (ogLocaleMeta) {
            ogLocaleMeta.setAttribute('content', config.ogLocale);
          }
        }

        // Initial language setup
        const stored = localStorage.getItem('lang');
        const browserLang = navigator.language.split('-')[0];
        const lang = (stored && langMap[stored]) ? stored :
                     (langMap[browserLang] ? browserLang : 'ko');
        updateHtmlLang(lang);

        // Listen for language changes
        window.addEventListener('languageChange', function(e) {
          updateHtmlLang(e.detail);
        });
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
