    filters.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.tagName !== 'BUTTON') return;

      const category = target.dataset.category;

      // Update button styles
      filters.querySelectorAll('button').forEach((btn) => {
        btn.classList.remove('bg-primary-500', 'text-white');
        btn.classList.add('bg-[var(--color-card)]', 'text-[var(--color-text)]', 'border', 'border-[var(--color-border)]');
      });
      target.classList.remove('bg-[var(--color-card)]', 'text-[var(--color-text)]', 'border', 'border-[var(--color-border)]');
      target.classList.add('bg-primary-500', 'text-white');

      // Filter tools
      grid.querySelectorAll('a').forEach((card) => {
        const cardCategory = card.dataset.category;
        if (category === 'all' || cardCategory === category) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  }
</script>
