<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 z-50 hidden bg-black/90 items-center justify-center">
  <button
    id="lightbox-close"
    class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300 transition-colors"
  >
    &times;
  </button>
  <button
    id="lightbox-prev"
    class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 transition-colors"
  >
    &#8249;
  </button>
  <button
    id="lightbox-next"
    class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-gray-300 transition-colors"
  >
    &#8250;
  </button>
  <img id="lightbox-img" src="" alt="" class="max-w-[90vw] max-h-[90vh] object-contain" />
</div>

<script define:vars={{ images }}>
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  const closeBtn = document.getElementById('lightbox-close');
  const prevBtn = document.getElementById('lightbox-prev');
  const nextBtn = document.getElementById('lightbox-next');
  let currentIndex = 0;

  // Open lightbox
  document.querySelectorAll('[data-index]').forEach((el) => {
    el.addEventListener('click', () => {
      currentIndex = parseInt(el.dataset.index);
      showImage(currentIndex);
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
    });
  });

  // Close lightbox
  closeBtn?.addEventListener('click', closeLightbox);
  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) closeLightbox();
  });

  // Navigation
  prevBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    showImage(currentIndex);
  });

  nextBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % images.length;
    showImage(currentIndex);
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (lightbox?.classList.contains('hidden')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      showImage(currentIndex);
    }
    if (e.key === 'ArrowRight') {
      currentIndex = (currentIndex + 1) % images.length;
      showImage(currentIndex);
    }
  });

  function showImage(index) {
    if (lightboxImg) {
      lightboxImg.src = images[index].src;
      lightboxImg.alt = images[index].alt;
    }
  }

  function closeLightbox() {
    lightbox?.classList.add('hidden');
    lightbox?.classList.remove('flex');
  }
</script>
