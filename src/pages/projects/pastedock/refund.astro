---
import MainLayout from '../../../layouts/MainLayout.astro';

const pageTitle = 'PasteDock Refund Policy';
const pageDescription = 'Refund Policy for PasteDock purchases.';
const canonical = '/projects/pastedock/refund';
const lastUpdated = 'February 16, 2026';
const pricingUrl = '/projects/pastedock/pricing';
---

<MainLayout title={pageTitle} description={pageDescription} canonical={canonical}>
  <section class="py-16 px-4 bg-gradient-to-b from-emerald-500/10 to-transparent">
    <div class="max-w-4xl mx-auto">
      <div class="mb-6 text-sm text-[var(--color-text-muted)] flex items-center gap-2">
        <a href="/" class="hover:text-[var(--color-text)]">Home</a>
        <span>/</span>
        <a href="/projects" class="hover:text-[var(--color-text)]">Projects</a>
        <span>/</span>
        <a href="/projects/pastedock" class="hover:text-[var(--color-text)]">PasteDock</a>
        <span>/</span>
        <span class="text-[var(--color-text)]">Refund</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-4">Refund Policy</h1>
      <p class="text-[var(--color-text-muted)]">Last updated: {lastUpdated}</p>
      <p class="text-sm text-[var(--color-text-muted)] mt-2">Pricing: <a href={pricingUrl} class="underline hover:text-[var(--color-text)]">US$4.99 one-time</a></p>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto space-y-6">
      <article class="p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] space-y-3">
        <h2 class="text-xl font-semibold">1. Eligibility</h2>
        <p class="text-[var(--color-text-muted)]">You can request a full refund within <strong>7 days</strong> of purchase.</p>
      </article>

      <article class="p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] space-y-3">
        <h2 class="text-xl font-semibold">2. How to Request</h2>
        <p class="text-[var(--color-text-muted)]">Send your request to <a class="underline" href="mailto:direcision@gmail.com">direcision@gmail.com</a> and include your purchase email and transaction reference.</p>
      </article>

      <article class="p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] space-y-3">
        <h2 class="text-xl font-semibold">3. Processing</h2>
        <p class="text-[var(--color-text-muted)]">Refunds are processed through Paddle to the original payment method. Processing times may vary based on your payment provider or bank.</p>
      </article>

      <article class="p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] space-y-3">
        <h2 class="text-xl font-semibold">4. Exceptions</h2>
        <p class="text-[var(--color-text-muted)]">We may deny refund requests in cases of abuse or fraud. This policy does not limit mandatory consumer rights provided by applicable law.</p>
      </article>

      <article class="p-6 rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] space-y-3">
        <h2 class="text-xl font-semibold">5. Contact</h2>
        <p class="text-[var(--color-text-muted)]">For any refund questions, contact <a class="underline" href="mailto:direcision@gmail.com">direcision@gmail.com</a>.</p>
      </article>
    </div>
  </section>
</MainLayout>
