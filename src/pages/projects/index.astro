---
import MainLayout from '../../layouts/MainLayout.astro';

const pageDescription = "A collection of personal projects, practical apps, and tools including PasteDock, JobWorld Kids Planner, and mini games.";

const projects = [
  {
    slug: 'pastedock',
    title: 'PasteDock',
    description: 'Menu bar clipboard manager for macOS',
    icon: 'ðŸ“‹',
    color: 'from-emerald-500 to-teal-500',
    badge: 'NEW',
  },
  {
    slug: 'jobworld-kids',
    title: 'JobWorld Kids Planner',
    description: 'Schedule planner for the Korea JobWorld Kids Experience Center',
    icon: 'ðŸŽª',
    color: 'from-blue-500 to-cyan-500',
    badge: 'NEW',
  },
  {
    slug: 'games',
    title: 'Game Center',
    description: 'Collection of free online mini games',
    icon: 'ðŸŽ®',
    color: 'from-purple-500 to-pink-500',
  },
];
---

<MainLayout title="Projects | Restato" description={pageDescription}>
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Projects</h1>
        <p class="text-xl text-[var(--color-text-muted)]">
          Apps and tools I have built
        </p>
      </div>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] hover:border-transparent transition-all duration-300 hover:shadow-2xl hover:-translate-y-1"
          >
            <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-0 group-hover:opacity-10 transition-opacity`} />
            <div class="p-8">
              {project.badge && (
                <span class="absolute top-4 right-4 px-2 py-1 text-xs font-bold bg-primary-500 text-white rounded-full">
                  {project.badge}
                </span>
              )}
              <div class="text-6xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
                {project.icon}
              </div>
              <h3 class="text-2xl font-bold mb-2 group-hover:text-primary-500 transition-colors">
                {project.title}
              </h3>
              <p class="text-[var(--color-text-muted)] text-lg">
                {project.description}
              </p>
              <div class="mt-6 flex items-center text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity">
                <span>View details</span>
                <svg class="w-5 h-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
