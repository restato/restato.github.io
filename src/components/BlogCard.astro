---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
  image?: string;
}

const { title, description, date, slug, tags = [], image } = Astro.props;

const formattedDate = date.toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block card hover:border-primary-500/30">
    {image && (
      <div class="relative -mx-6 -mt-6 mb-5 overflow-hidden rounded-t-2xl">
        <img
          src={image}
          alt={title}
          class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent" />
      </div>
    )}

    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <time
          datetime={date.toISOString()}
          class="text-xs font-medium text-[var(--color-text-muted)] bg-[var(--color-card-hover)] px-2.5 py-1 rounded-full"
        >
          {formattedDate}
        </time>
      </div>

      <h3 class="text-lg font-bold leading-snug group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
        {title}
      </h3>

      <p class="text-sm text-[var(--color-text-muted)] line-clamp-2 leading-relaxed">
        {description}
      </p>

      {tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 pt-2">
          {tags.slice(0, 3).map((tag) => (
            <span class="text-xs px-2 py-0.5 rounded-md bg-primary-500/10 text-primary-600 dark:text-primary-400 font-medium">
              {tag}
            </span>
          ))}
          {tags.length > 3 && (
            <span class="text-xs px-2 py-0.5 text-[var(--color-text-muted)]">
              +{tags.length - 3}
            </span>
          )}
        </div>
      )}
    </div>
  </a>
</article>
